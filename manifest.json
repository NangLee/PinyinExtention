{
  "name": "Anglify",
  "description": "Converts traditional Mandarin language into pinyin",
  "version": "1.0",
  "manifest_version": 3,
  "web_accessible_resources": [
      {
          "resources": ["pinyin.json"],
          "matches": ["<all_urls>"]
      }
  ],
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["main.js"]
      }
  ],
  "permissions": [
      "contextMenus",
      "activeTab",
      "storage"
  ]
}
